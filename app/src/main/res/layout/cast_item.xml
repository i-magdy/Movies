<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="@dimen/space_8x"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardElevation="@dimen/space_4x">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:minWidth="110dp"
        android:orientation="vertical">
        <androidx.cardview.widget.CardView
            android:layout_gravity="center"
            android:layout_width="72dp"
            android:scaleType="fitCenter"
            android:layout_marginTop="8dp"
            app:cardCornerRadius="100dp"
            android:layout_marginEnd="@dimen/space_16x"
            android:layout_marginStart="@dimen/space_16x"
            android:layout_height="72dp">
            <ImageView
                android:id="@+id/cast_profile_iv"
                android:layout_width="match_parent"
                android:scaleType="centerCrop"
                android:contentDescription="@string/profile_image_label"
                android:layout_height="match_parent"/>
        </androidx.cardview.widget.CardView>
        <TextView
            android:id="@+id/cast_profile_name"
            tools:text="Name goes here"
            android:layout_margin="4dp"
            android:maxLines="1"
            android:layout_gravity="center"
            android:textAppearance="?attr/textAppearanceListItemSecondary"
            android:textAlignment="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>